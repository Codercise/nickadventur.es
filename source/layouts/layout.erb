<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="left-sidebar">
      <div class="blog-title-box sidebar-box">
        <p><a href="#TopOfPage">Nick Adventur.es</a></p>
      </div>

      <div id="TopOfPage"></div>
      <% data.videoposts.each do |post| %>
        <div class="sidebar-box">
          <p><%= link_to post.title, "\#"+post.title.gsub(/\s+/, "") %></p>
        </div>
      <% end %>
    </div>
    <div class="right-content">
      <% data.videoposts.each do |post| %>
        <div id="<%= post.title.gsub(/\s+/, "") %>" class="single-video">
          <video loop muted autoplay>
            <source src="/video/<%=post.videosrc %>" type="video/mp4">
          </video>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
